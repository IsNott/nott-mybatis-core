<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%5level [%thread] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="stdout"/>
    </root>


    <logger name="org.nott.mybatis.mapper.NottMapper">
        <level value="info"/>
    </logger>

    <logger name="org.nott.mybatis.mapper.CommonMapper">
        <level value="info"/>
    </logger>

</configuration>